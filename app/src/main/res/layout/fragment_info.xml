<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:theme="@style/Tab3Theme">

    <ImageView
        android:layout_width="@dimen/info_icon_width"
        android:layout_height="@dimen/info_icon_height"
        android:src="@drawable/icon_amber_mkv"/>

    <Button
        android:text="@string/info_btn_showsplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info_btn_showsplash"
        android:onClick="forceShowSplash"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"/>

    <TextView
        android:id="@+id/info_txt_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"/>

</LinearLayout>