<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/tab2_primary</item>
        <item name="colorPrimaryDark">@color/grey300</item>
        <item name="colorAccent">@color/tab2_accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="Tab2Theme" parent="AppTheme">
        <item name="colorPrimary">@color/tab2_primary</item>
        <item name="colorPrimaryDark">@color/tab2_primary_dark</item>
        <item name="colorAccent">@color/tab2_accent</item>
    </style>

    <style name="Tab1Theme" parent="AppTheme">
        <item name="colorPrimary">@color/tab1_primary</item>
        <item name="colorPrimaryDark">@color/tab1_primary_dark</item>
        <item name="colorAccent">@color/tab1_accent</item>
    </style>

    <style name="Tab3Theme" parent="AppTheme">
        <item name="colorPrimary">@color/tab3_primary</item>
        <item name="colorPrimaryDark">@color/tab3_primary_dark</item>
        <item name="colorAccent">@color/tab3_accent</item>
    </style>

</resources>
